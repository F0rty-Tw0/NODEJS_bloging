<!-- Including the Header-->
<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class ="field">
            <label>Title </label>
            <input required type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class ="field">
            <label>Image </label>
            <input required type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class ="field">
            <label>Blog Content</label>
            <textarea required name="blog[body]" placeholder="Blog Post Goes Here"><%- blog.body %></textarea>
        </div>
        <input class="ui black basic button big" type="submit"> 
    </form>
</div>


<!-- Including the Footer-->
<%- include("partials/footer") %>