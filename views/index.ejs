<!-- Including the Header-->
<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">Hipsters Blog</div>
    <div class="ui top attached piled segment">
        <% blogs.forEach((blog)=>{ %>
        <div class="ui item">
            <div class="ui image"><img src="<%= blog.image %>">
            </div>
            <div class="ui content">
                <a class="ui header" href="/blogs/<%= blog._id %>">
                    <%= blog.title %>
                </a>
                <div class="ui meta">
                    <span><em><%= blog.created.toDateString() %></em></span>
                </div>
                <div class="ui description">
                    <p><%- blog.body.substring(0, 100) %>...</p>
                </div>
                <div class="ui extra">
                    <a class="ui floated basic black button big" href="/blogs/<%= blog._id %>">
                        Read More
                        <i class="ui right chevron icon"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="ui section divider"></div>
        <% }); %>
        
    </div>
</div>



<!-- Including the Footer-->
<%- include("partials/footer") %>