<!-- Including the Header-->
<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounder image" src="<%= blog.image %>">
            <div class="content">
                <span><em><%= blog.created.toDateString() %></em></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <a class="ui green basic button big" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="form1" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"></form>
                <button class="ui red basic button big" onclick="submitForm()" />Delete</button>
            </form>
            <form id="form0" action="/blogs" method="POST">
                <input class="hidden" required type="text" name="blog[title]" value="<%= blog.title %>">
                <input class="hidden" required type="text" name="blog[image]" value="<%= blog.image %>">
                <textarea class="hidden" required name="blog[body]"
                    placeholder="Blog Post Goes Here"><%- blog.body %></textarea>
            </form>
        </div>
    </div>
</div>


<!-- Including the Footer-->
<%- include("partials/footer") %>